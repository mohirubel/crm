@{
    ViewData["Title"] = "Home Page";
}

<div class="flex min-h-screen items-center justify-center bg-gradient-to-br from-blue-50 to-indigo-100 p-4">
    <div class="w-full max-w-lg bg-white shadow-lg rounded-2xl overflow-hidden">

        <!-- Form -->
        <div class="p-6">
            <form id="registerForm" class="space-y-4">
                <!-- Error Alert -->
                <div id="errorBox"
                     class="hidden bg-red-100 border border-red-400 text-red-700 px-4 py-2 rounded-md text-sm"></div>
                <div id="successBox"
                     class="hidden bg-green-100 border border-green-400 text-green-700 px-4 py-2 rounded-md text-sm mt-2"></div>

                <!-- Full Name -->
                <div class="space-y-2">
                    <label for="name" class="block text-sm font-medium">Full Name</label>
                    <div class="relative">
                        <i data-lucide="user"
                           class="absolute top-2.5 left-3 h-4 w-4 text-gray-400"></i>
                        <input id="name"
                               type="text"
                               placeholder="John Doe"
                               class="pl-10 h-9 w-full rounded-md border border-gray-300 px-3 py-1 focus:ring-2 focus:ring-green-500"
                               required />
                    </div>
                </div>

                <!-- Username -->
                <div class="space-y-2">
                    <label for="username" class="block text-sm font-medium">Username</label>
                    <div class="relative">
                        <i data-lucide="user-circle"
                           class="absolute top-2.5 left-3 h-4 w-4 text-gray-400"></i>
                        <input id="username"
                               type="text"
                               placeholder="johndoe"
                               class="pl-10 h-9 w-full rounded-md border border-gray-300 px-3 py-1 focus:ring-2 focus:ring-green-500"
                               required />
                    </div>
                </div>

                <!-- Phone -->
                <div class="space-y-2">
                    <label for="phone" class="block text-sm font-medium">Phone</label>
                    <div class="relative">
                        <i data-lucide="phone"
                           class="absolute top-2.5 left-3 h-4 w-4 text-gray-400"></i>
                        <input id="phone"
                               type="tel"
                               placeholder="+8801XXXXXXXXX"
                               class="pl-10 h-9 w-full rounded-md border border-gray-300 px-3 py-1 focus:ring-2 focus:ring-green-500"
                               required />
                    </div>
                </div>

                <!-- Email -->
                <div class="space-y-2">
                    <label for="email" class="block text-sm font-medium">Email</label>
                    <div class="relative">
                        <i data-lucide="mail"
                           class="absolute top-2.5 left-3 h-4 w-4 text-gray-400"></i>
                        <input id="email"
                               type="email"
                               placeholder="you@example.com"
                               class="pl-10 h-9 w-full rounded-md border border-gray-300 px-3 py-1 focus:ring-2 focus:ring-green-500"
                               required />
                    </div>
                </div>

                <!-- Password -->
                <div class="space-y-2">
                    <label for="password" class="block text-sm font-medium">Password</label>
                    <div class="relative">
                        <i data-lucide="lock"
                           class="absolute top-2.5 left-3 h-4 w-4 text-gray-400"></i>
                        <input id="password"
                               type="password"
                               placeholder="Enter password"
                               class="pl-10 h-9 w-full rounded-md border border-gray-300 px-3 py-1 focus:ring-2 focus:ring-green-500"
                               required />
                    </div>
                </div>

                <!-- Confirm Password -->
                <div class="space-y-2">
                    <label for="confirmPassword" class="block text-sm font-medium">Confirm Password</label>
                    <div class="relative">
                        <i data-lucide="lock"
                           class="absolute top-2.5 left-3 h-4 w-4 text-gray-400"></i>
                        <input id="confirmPassword"
                               type="password"
                               placeholder="Re-enter password"
                               class="pl-10 h-9 w-full rounded-md border border-gray-300 px-3 py-1 focus:ring-2 focus:ring-green-500"
                               required />
                    </div>
                </div>

                <!-- Button -->
                <button type="submit"
                        id="registerBtn"
                        class="h-9 w-full text-base font-medium text-white bg-green-600 hover:bg-green-700 rounded-md">
                    Register
                </button>
            </form>

            <!-- Link to Login -->
            <div class="mt-6 text-center text-sm text-gray-600">
                <p>Already have an account?</p>
                <button class="text-blue-600 underline"
                        onclick="window.location.href='login.html'">
                    Sign In
                </button>
            </div>
        </div>

    </div>


</div>


<script>
    lucide.createIcons();

    const form = document.getElementById("registerForm");
    const errorBox = document.getElementById("errorBox");
    const registerBtn = document.getElementById("registerBtn");

    form.addEventListener("submit", async function (e) {
      e.preventDefault();

      const name = document.getElementById("name").value.trim();
      const username = document.getElementById("username").value.trim();
      const phone = document.getElementById("phone").value.trim();
      const email = document.getElementById("email").value.trim();
      const password = document.getElementById("password").value.trim();
      const confirmPassword = document.getElementById("confirmPassword").value.trim();

      errorBox.classList.add("hidden");
      registerBtn.textContent = "Creating Account...";
      registerBtn.disabled = true;

      // Validation: check passwords
      if (password !== confirmPassword) {
        errorBox.textContent = "Passwords do not match.";
        errorBox.classList.remove("hidden");
        registerBtn.textContent = "Register";
        registerBtn.disabled = false;
        return;
      }

      try {
        // Call backend API
        const response = await fetch("/Admin/Register", {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify({
            FullName : name,
            userName: username,
            Phone: phone,
            email: email,
            password: password,
            roleName: "admin",
          }),
        });

        if (!response.ok) {
          const errorData = await response.json();
          throw new Error(errorData.message || "Registration failed");
        }

        const data = await response.json();

        // Save user data in localStorage (optional, like in React)
        localStorage.setItem("user", JSON.stringify(data.user || data));

        successBox.textContent = "Registration successful!";
        successBox.classList.remove("hidden");
        registerBtn.textContent = "Register";
        registerBtn.disabled = false;
        form.reset();

        // Redirect on success
      //   window.location.href = "index.html";

      } catch (err) {
        errorBox.textContent = err.message || "Something went wrong.";
        errorBox.classList.remove("hidden");
        registerBtn.textContent = "Register";
        registerBtn.disabled = false;
      }
    });
</script>